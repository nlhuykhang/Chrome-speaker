{
  "name": "Vietnamese text speaker",
  "version": "1.0",
  "description": "I am a text syntheis, I can speak Vietnamese language for you",
  "permissions": ["contextMenus", "http://localhost:3000/", "http://*/"],
  "browser_action": {
      "default_title": "Speaker",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "background": {
    "persistent": false,
    "scripts": ["contextMenu.js"]
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
